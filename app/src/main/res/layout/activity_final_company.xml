<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".TPO.FinalCompany">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:background="@drawable/custompop">

        <TextView
            android:layout_marginTop="25dp"
            android:textColor="#425e87"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Successfully Registered "/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mood_black_24dp"/>

        <LinearLayout
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#425e87"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code"
                    android:textStyle="bold"
                    android:textColor="#425e87"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligiblity"
                    android:textStyle="bold"
                    android:textColor="#425e87"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:textColor="#425e87"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drive Date"
                    android:textStyle="bold"
                    android:textColor="#425e87"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="20dp"
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code"
                    android:id="@+id/code"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eligiblity"
                    android:textStyle="bold"
                    android:id="@+id/eligible"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:id="@+id/location"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drive Date"
                    android:id="@+id/drivedate"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="20dp"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:textColor="#425e87"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:textSize="18dp"
            android:id="@+id/rhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"/>
    </LinearLayout>


</LinearLayout>